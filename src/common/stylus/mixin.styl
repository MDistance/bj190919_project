//stylus 混合
one-px($color)
  position relative
  &:after
    content ""
    display block
    position absolute
    left 0
    bottom 0
    width 100%
    height 1px
    background $color
    @media screen and (-webkit-device-pixel-ratio:2)
      transform scaleY(.5)
    @media screen and (-webkit-device-pixel-ratio:3)
      transform scaleY(.3333333)
